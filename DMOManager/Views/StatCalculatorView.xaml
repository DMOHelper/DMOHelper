<UserControl x:Class="DMOManager.Views.StatCalculatorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:helper="clr-namespace:DMOManager.Helper"
             xmlns:local="clr-namespace:DMOManager.Views"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="800">
    <!--Stat Calculator-->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="180"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="Auto" MinWidth="100"/>
            <ColumnDefinition Width="Auto" MinWidth="100"/>
            <ColumnDefinition Width="Auto" MinWidth="100"/>
            <ColumnDefinition Width="Auto" MinWidth="100"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Digimon Base Information" FontWeight="Bold"/>
            <Button Content="Presets" x:Name="PresetsButton" IsEnabled="{Binding StatEnabled}" Click="PresetsButton_Click"  MinWidth="80" MinHeight="30"/>
        </StackPanel>
        <!--Size-->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0">
            <syncfusion:DoubleTextBox NumberDecimalDigits="2" Value="{Binding StatInformation.Size, Mode=TwoWay}" MaxValue="140" MinValue="70" MinValueOnExceedMinDigit="True" MaxValueOnExceedMaxDigit="True" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Text="140" Height="28" Width="80"/>
            <Label Content="Digimon Size"/>
        </StackPanel>
        <!--HP-->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="2" Grid.Column="0">
            <syncfusion:DoubleTextBox NumberDecimalDigits="0" Value="{Binding StatInformation.Digimon.BaseHP, Mode=TwoWay}" MaxValue="30000" MinValue="0" MinValueOnExceedMinDigit="True" MaxValueOnExceedMaxDigit="True" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Text="0" Height="28" Width="80"/>
            <Label Content="Base HP"/>
        </StackPanel>
        <!--DS-->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="3" Grid.Column="0">
            <syncfusion:DoubleTextBox NumberDecimalDigits="0" Value="{Binding StatInformation.Digimon.BaseDS, Mode=TwoWay}" MaxValue="30000" MinValue="0" MinValueOnExceedMinDigit="True" MaxValueOnExceedMaxDigit="True" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Text="0" Height="28" Width="80"/>
            <Label Content="Base DS"/>
        </StackPanel>
        <!--AT-->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="4" Grid.Column="0">
            <syncfusion:DoubleTextBox NumberDecimalDigits="0" Value="{Binding StatInformation.Digimon.BaseAT, Mode=TwoWay}" MaxValue="15000" MinValue="0" MinValueOnExceedMinDigit="True" MaxValueOnExceedMaxDigit="True" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Text="0" Height="28" Width="80"/>
            <Label Content="Base AT"/>
        </StackPanel>
        <!--AS-->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="5" Grid.Column="0">
            <syncfusion:DoubleTextBox NumberDecimalDigits="2" Value="{Binding StatInformation.Digimon.AS, Mode=TwoWay}" MaxValue="3" MinValue="1" MinValueOnExceedMinDigit="True" MaxValueOnExceedMaxDigit="True" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Text="1" Height="28" Width="80"/>
            <Label Content="Attack Speed"/>
        </StackPanel>
        <!--CT-->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="6" Grid.Column="0">
            <syncfusion:DoubleTextBox NumberDecimalDigits="2" Value="{Binding StatInformation.Digimon.BaseCT, Mode=TwoWay}" MaxValue="30" MinValue="0" MinValueOnExceedMinDigit="True" MaxValueOnExceedMaxDigit="True" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Text="0" Height="28" Width="80"/>
            <Label Content="Base CT"/>
        </StackPanel>
        <!--HT-->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="7" Grid.Column="0">
            <syncfusion:DoubleTextBox NumberDecimalDigits="0" Value="{Binding StatInformation.Digimon.HT, Mode=TwoWay}" MaxValue="3000" MinValue="0" MinValueOnExceedMinDigit="True" MaxValueOnExceedMaxDigit="True" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Text="0" Height="28" Width="80"/>
            <Label Content="Hit Rate"/>
        </StackPanel>
        <!--DE-->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="8" Grid.Column="0">
            <syncfusion:DoubleTextBox NumberDecimalDigits="0" Value="{Binding StatInformation.Digimon.BaseDE, Mode=TwoWay}" MaxValue="5000" MinValue="0" MinValueOnExceedMinDigit="True" MaxValueOnExceedMaxDigit="True" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Text="0" Height="28" Width="80"/>
            <Label Content="Base DE"/>
        </StackPanel>
        <!--EV-->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="9" Grid.Column="0">
            <syncfusion:DoubleTextBox NumberDecimalDigits="2" Value="{Binding StatInformation.Digimon.EV, Mode=TwoWay}" MaxValue="100" MinValue="0" MinValueOnExceedMinDigit="True" MaxValueOnExceedMaxDigit="True" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Text="0" Height="28" Width="80"/>
            <Label Content="Evasion"/>
        </StackPanel>
        <!--Attribute-->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="10" Grid.Column="0">
            <ComboBox FontWeight="SemiBold" SelectedItem="{Binding StatInformation.Digimon.Attribute, Mode=TwoWay}" ItemsSource="{Binding DigimonAttributes}" Height="28" Width="80"/>
            <Label Content="Attribute"/>
        </StackPanel>
        <!--Element-->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="11" Grid.Column="0">
            <ComboBox FontWeight="SemiBold" SelectedItem="{Binding StatInformation.Digimon.Elemental, Mode=TwoWay}" ItemsSource="{Binding ElementalAttributes}" Height="28" Width="80"/>
            <Label Content="Element"/>
        </StackPanel>

        <!--Tamer Informations-->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="3" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Tamer Informations" FontWeight="Bold"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center">
            <Label Content="Tamers"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="2" HorizontalAlignment="Left" VerticalAlignment="Center">
            <Label Content="Additional Skills (Enh./Ult.)"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Column="2" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center">
            <ComboBox IsEnabled="{Binding StatEnabled}"  FontWeight="SemiBold" SelectedItem="{Binding StatInformation.Tamer, Mode=TwoWay}" ItemsSource="{Binding Tamers}" Height="28" Width="80"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Column="3" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center">
            <ComboBox IsEnabled="{Binding StatEnabled}"  FontWeight="SemiBold" SelectedItem="{Binding StatInformation.Skill1, Mode=TwoWay}" ItemsSource="{Binding Tamers}" Height="28" Width="80"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Column="4" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center">
            <ComboBox IsEnabled="{Binding StatEnabled}"  FontWeight="SemiBold" SelectedItem="{Binding StatInformation.Skill2, Mode=TwoWay}" ItemsSource="{Binding Tamers}" Height="28" Width="80"/>
        </StackPanel>
        <StackPanel Grid.Column="5" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Accessories" Click="Accessories_Click" MinWidth="90" MinHeight="30"/>
        </StackPanel>
        <StackPanel  Grid.Column="5" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Seals" Click="Seals_Click" MinWidth="90" MinHeight="30"/>
        </StackPanel>

        <!--Party Informations-->
        <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="3" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Party Informations" FontWeight="Bold"/>
        </StackPanel>
        <!--1-->
        <StackPanel Orientation="Horizontal" Grid.Column="2" Grid.Row="4" HorizontalAlignment="Left" VerticalAlignment="Center">
            <ComboBox IsEnabled="{Binding StatEnabled}"  FontWeight="SemiBold" SelectedItem="{Binding StatInformation.Party1Tamer, Mode=TwoWay}" ItemsSource="{Binding Tamers}" Height="28" Width="80"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Column="3" Grid.Row="4" HorizontalAlignment="Left" VerticalAlignment="Center">
            <ComboBox IsEnabled="{Binding StatEnabled}"  FontWeight="SemiBold" SelectedItem="{Binding StatInformation.Party1Skill1, Mode=TwoWay}" ItemsSource="{Binding Tamers}" Height="28" Width="80"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Column="4" Grid.Row="4" HorizontalAlignment="Left" VerticalAlignment="Center">
            <ComboBox IsEnabled="{Binding StatEnabled}"  FontWeight="SemiBold" SelectedItem="{Binding StatInformation.Party1Skill2, Mode=TwoWay}" ItemsSource="{Binding Tamers}" Height="28" Width="80"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="4" Grid.Column="5" HorizontalAlignment="Left" VerticalAlignment="Center">
            <Label Content="Party Member 1"/>
        </StackPanel>
        <!--2-->
        <StackPanel Orientation="Horizontal" Grid.Column="2" Grid.Row="5" HorizontalAlignment="Left" VerticalAlignment="Center">
            <ComboBox IsEnabled="{Binding StatEnabled}"  FontWeight="SemiBold" SelectedItem="{Binding StatInformation.Party2Tamer, Mode=TwoWay}" ItemsSource="{Binding Tamers}" Height="28" Width="80"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Column="3" Grid.Row="5" HorizontalAlignment="Left" VerticalAlignment="Center">
            <ComboBox IsEnabled="{Binding StatEnabled}"  FontWeight="SemiBold" SelectedItem="{Binding StatInformation.Party2Skill1, Mode=TwoWay}" ItemsSource="{Binding Tamers}" Height="28" Width="80"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Column="4" Grid.Row="5" HorizontalAlignment="Left" VerticalAlignment="Center">
            <ComboBox IsEnabled="{Binding StatEnabled}"  FontWeight="SemiBold" SelectedItem="{Binding StatInformation.Party2Skill2, Mode=TwoWay}" ItemsSource="{Binding Tamers}" Height="28" Width="80"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="5" Grid.Column="5" HorizontalAlignment="Left" VerticalAlignment="Center">
            <Label Content="Party Member 2"/>
        </StackPanel>
        <!--3-->
        <StackPanel Orientation="Horizontal" Grid.Column="2" Grid.Row="6" HorizontalAlignment="Left" VerticalAlignment="Center">
            <ComboBox IsEnabled="{Binding StatEnabled}"  FontWeight="SemiBold" SelectedItem="{Binding StatInformation.Party3Tamer, Mode=TwoWay}" ItemsSource="{Binding Tamers}" Height="28" Width="80"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Column="3" Grid.Row="6" HorizontalAlignment="Left" VerticalAlignment="Center">
            <ComboBox IsEnabled="{Binding StatEnabled}"  FontWeight="SemiBold" SelectedItem="{Binding StatInformation.Party3Skill1, Mode=TwoWay}" ItemsSource="{Binding Tamers}" Height="28" Width="80"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Column="4" Grid.Row="6" HorizontalAlignment="Left" VerticalAlignment="Center">
            <ComboBox IsEnabled="{Binding StatEnabled}"  FontWeight="SemiBold" SelectedItem="{Binding StatInformation.Party3Skill2, Mode=TwoWay}" ItemsSource="{Binding Tamers}" Height="28" Width="80"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="6" Grid.Column="5" HorizontalAlignment="Left" VerticalAlignment="Center">
            <Label Content="Party Member 3"/>
        </StackPanel>
    </Grid>
</UserControl>
